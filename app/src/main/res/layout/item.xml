<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Lorem ipsum dolor, sit amet consectetur adipisicing elit. Vel quo dolor dolorem aspernatur reiciendis nulla sunt, quaerat fugiat perspiciatis iusto similique quod ea ipsa tempora unde excepturi eaque! Reprehenderit, quis."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/imgDelete"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="Delete"
        android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/imgUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_edit_24"
            android:text="Edit" />
    </LinearLayout>

</LinearLayout>